{
    "title": "CZ Reality Scraper Input",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "portals": {
            "title": "Portals",
            "type": "array",
            "description": "Which portals to scrape.",
            "editor": "select",
            "default": ["sreality"],
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "type": "string",
                "enum": ["sreality", "bezrealitky"],
                "enumTitles": ["Sreality.cz", "Bezrealitky.cz"]
            }
        },
        "categories": {
            "title": "Property Categories",
            "type": "array",
            "description": "Which property types to scrape.",
            "editor": "select",
            "default": ["domy"],
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "type": "string",
                "enum": ["domy", "byty", "pozemky"],
                "enumTitles": ["Domy (Houses)", "Byty (Apartments)", "Pozemky (Land)"]
            }
        },
        "offerType": {
            "title": "Offer Type",
            "type": "string",
            "description": "Filter by offer type.",
            "default": "prodej",
            "enum": ["prodej", "pronajem", "vse"],
            "enumTitles": ["Prodej (For sale)", "Pronajem (For rent)", "Vše (All)"]
        },
        "regions": {
            "title": "Regions",
            "type": "array",
            "description": "Czech regions to filter by. Select specific regions or leave 'Vše' selected to scrape all of Czech Republic.",
            "editor": "select",
            "default": ["vse"],
            "uniqueItems": true,
            "items": {
                "type": "string",
                "enum": [
                    "vse",
                    "Praha",
                    "Středočeský",
                    "Jihočeský",
                    "Plzeňský",
                    "Karlovarský",
                    "Ústecký",
                    "Liberecký",
                    "Královéhradecký",
                    "Pardubický",
                    "Vysočina",
                    "Jihomoravský",
                    "Olomoucký",
                    "Zlínský",
                    "Moravskoslezský"
                ],
                "enumTitles": [
                    "Vše (Whole country)",
                    "Praha",
                    "Středočeský kraj",
                    "Jihočeský kraj",
                    "Plzeňský kraj",
                    "Karlovarský kraj",
                    "Ústecký kraj",
                    "Liberecký kraj",
                    "Královéhradecký kraj",
                    "Pardubický kraj",
                    "Kraj Vysočina",
                    "Jihomoravský kraj",
                    "Olomoucký kraj",
                    "Zlínský kraj",
                    "Moravskoslezský kraj"
                ]
            }
        },
        "maxPrice": {
            "title": "Max Price (CZK)",
            "type": "integer",
            "nullable": true,
            "description": "Maximum listing price in CZK. Leave empty for no limit.",
            "minimum": 1
        },
        "minArea": {
            "title": "Min Floor Area (m²)",
            "type": "integer",
            "nullable": true,
            "description": "Minimum usable floor area in m². Leave empty for no limit.",
            "minimum": 1
        },
        "maxListings": {
            "title": "Max Listings",
            "type": "integer",
            "nullable": true,
            "description": "Maximum number of listings to scrape per portal. Leave empty for no limit.",
            "default": 100,
            "minimum": 1
        },
        "enableHistory": {
            "title": "Enable Price History",
            "type": "boolean",
            "description": "Track listing history across runs — detect new listings, price changes, and compute price-to-median ratio. Charged per enriched listing.",
            "default": false
        },
        "historyStoreId": {
            "title": "History Store ID",
            "type": "string",
            "description": "Name of a persistent (named) Apify key-value store used to store history across runs. Only used when Enable Price History is on. Leave empty to use the default store.",
            "editor": "textfield",
            "default": ""
        },
        "proxyConfiguration": {
            "title": "Proxy Configuration",
            "type": "object",
            "description": "Proxy settings for avoiding bot detection. Recommended for production runs.",
            "editor": "proxy",
            "default": { "useApifyProxy": true }
        }
    },
    "required": []
}
